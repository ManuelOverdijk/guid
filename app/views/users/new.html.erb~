<div class="page-header">
  <h1>Sign Up</h1>
</div>
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @user.errors.any? %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert">Ã—</a>
    <% for message in @user.errors.full_messages %> 
      <%= message %><br />
    <% end %> 
  </div>
  <% end %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :placeholder => "Enter your email address", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :placeholder =>, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, "Enter your password", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :placeholder => "Confirm your password",
                                                 :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.hidden_field :role, :value => "agent" %>
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
  </div>
<% end %>
