<div class="page-header">
  <h1>Log In</h1>
</div>

<%= form_for :session, :url => session_path, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :placeholder => "Enter your email address", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :placeholder => "Enter your password", :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Log In', :class => 'btn btn-primary' %>
  </div>
<% end %>
